# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT & Authentication Settings 
SECRET_KEY=your_secure_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# SMTP Email Settings 
SMTP_SERVER=your_smtp_server
SMTP_PORT=587
SMTP_EMAIL=your_email@domain.com
